parse_git_branch() {
 git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
PS1="\w\$(parse_git_branch) $ "

eval "$(hub alias -s)"
alias be="bundle exec "
alias ll="ls -lah"
alias nw="tmux new-window"
alias pgprod="psql -hpostgres11-lks.production-2.banno-internal.com -Ubanno -dbanno_all"
alias big-start="big machine restart && eval $(docker-machine env banno-big) && big machine add-route"
alias big-update="yes | big update && big compose regenerate && big pull"
alias big-stop="big destroy && docker-machine stop banno-big"

