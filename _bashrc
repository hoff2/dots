if [ -f `brew --prefix`/etc/bash_completion ]; then
    . `brew --prefix`/etc/bash_completion
fi

export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

export EDITOR='et'
# open editor in a split tmux window
function e {
  tmux split-window -n "Edit: $@" "$EDITOR $@"
} 

parse_git_branch() {
 git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
PS1="\w\$(parse_git_branch) $ "

eval "$(hub alias -s)"
alias be="bundle exec "
alias ll="ls -lah"
alias big-machine="big machine restart && eval $(docker-machine env banno-big) && big machine add-route"
alias big-update="yes | big update && big compose regenerate && big pull"
alias nw="tmux new-window"

t
